<h1><%= @personality.name %></h1>
<p><%= simple_format @personality.description %></p>

<hr>
<% if @contentments.count > 0 %>
	<p>You will be happiest when your career is:</p>
	<ul>
		<% @contentments.each do |c| %>
			<li><%= c.body %></li>
		<% end %>
	</ul>
<% end %>

<p><%= render partial: 'discovery/career_contentments/form', locals: { personality: @personality } %></p>



