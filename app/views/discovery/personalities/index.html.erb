<div class="container">
	<div class="row">
		<% if @personalities.count == 0 %>
			<h3>No Personalities Exist.</h3>
			<p><%= link_to "Add One", new_personality_path %></p>
		<% elsif @personalities.count > 0 %>
			<h3><%= @personalities.count %> personalities:</h3>
			<% @personalities.each do |p| %>
				<h3><%= link_to p.name, p %></h3>
				<p><%= p.categories.count %> Categories:</p>
				<% p.categories.each do |c| %>
					<h5><%= link_to c.name, c %></h5>
					<p class="small"><%= c.majors.count %> majors, <%= c.careers.count %> careers, <%= c.strengths.count %> strengths.</p>
				<% end %>
				<p><%= simple_format truncate(p.description, length: 150)  %></p>

				<p><%= link_to "Edit", edit_personality_path(p) %> | <%= link_to "Delete", p, method: :delete, data: { confirm: "Are you sure? You will remove this personality from the database and can\'t get it back."} %></p>
				<hr>
			<% end %>
		<% end %>
	</div>
</div>
